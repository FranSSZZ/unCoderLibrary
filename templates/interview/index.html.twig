{% extends 'base.html.twig' %}

{% block title %}Interview index{% endblock %}

{% block body %}
    <h1>Interview index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Ciudad</th>
                <th>H_crimen</th>
                <th>Testigo</th>
                <th>T_crimen</th>
                <th>Transcripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for interview in interviews %}
            <tr>
                <td>{{ interview.id }}</td>
                <td>{{ interview.fecha }}</td>
                <td>{{ interview.ciudad }}</td>
                <td>{{ interview.hCrimen }}</td>
                <td>{{ interview.testigo }}</td>
                <td>{{ interview.tCrimen }}</td>
                <td>{{ interview.transcripcion }}</td>
                <td>
                    <a href="{{ path('app_interview_show', {'id': interview.id}) }}">show</a>
                    <a href="{{ path('app_interview_edit', {'id': interview.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_interview_new') }}">Create new</a>
{% endblock %}
